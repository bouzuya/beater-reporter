{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".tmp",
    "removeComments": true,
    "rootDir": ".",
    "sourceMap": false,
    "strict": true,
    "target": "es2015"
  },
  "files": [
    "./src/index.ts",
    "./test/index.ts"
  ]
}
